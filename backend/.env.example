# CPG2PVG-AI Backend Environment Configuration

# 基础配置
PROJECT_NAME=CPG2PVG-AI
PROJECT_DESCRIPTION=将临床医学指南转化为公众医学指南的智能系统
VERSION=0.1.0
API_V1_STR=/api/v1

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=false

# 安全配置
SECRET_KEY=your-super-secret-key-change-in-production-environment
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS配置
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# 数据库配置
DATABASE_URL=postgresql+asyncpg://cpg2pvg_user:cpg2pvg_password@localhost:5432/cpg2pvg
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# MinIO配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=cpg2pvg-docs
MINIO_SECURE=false

# 文件上传配置
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=[".pdf", ".docx", ".txt", ".doc"]

# AI模型配置
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# 默认模型配置
DEFAULT_LLM_MODEL=gpt-3.5-turbo
HIGH_QUALITY_MODEL=gpt-4
COST_EFFECTIVE_MODEL=gpt-3.5-turbo-instruct

# 工作流配置
MAX_CHUNK_SIZE=800
MIN_CHUNK_SIZE=100
DEFAULT_PROCESSING_MODE=slow

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Spacy模型
SPACY_MODEL=en_core_sci_sm

# Elasticsearch配置（可选）
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=cpg2pvg

# 邮件配置（可选）
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Sentry错误追踪（可选）
SENTRY_DSN=your-sentry-dsn

# OpenTelemetry追踪（可选）
OTEL_SERVICE_NAME=cpg2pvg-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317